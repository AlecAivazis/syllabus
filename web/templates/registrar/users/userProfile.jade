#userProfile
  #userName
   {{user.getName()}}
  #userContent  
    span#userInfo
      .line
        span.label
          | Username
        {{user.username}}
      .line
        span.label
          | Email
        {{user.email}}
      .line
        span.label
          | Role(s)

    span#userData
      #userExemptions
        .line.title
          | Major Requirement Exemptions

        // show the exemptions that are already in place
        -for exemption in exemptions
          .line.exemption(id="exemption{{exemption.id}}" )
            | Replace
            select.replace
              option(value="0")
                 | Required Course
              -for course in courses
                option(selected="if {{course[0].id}} == {{exemption.profile.id}}", )
                  {{course[0].interest.abbrv}} {{course[0].number}}
            |  with
            select( onchange="updateInterestCourses(this)", )
              option(value="0")
                | none
              -for interest in interests
                option( value="{{interest.id}}", selected="if {{interest.id}} == {{exemption.profile.interest.id}}" )
                  {{interest.abbrv}}

            select.replacement
              -for course in exemption.getReplacement().interest.courses.all() 
                option
                  {{course.number}}

        // line to add new exemption
        .line.exemption
          | Replace
          select.replace
            option(value="0") 
              | Required Course
            -for course in courses
              option(value="{{course[0].pk}}")
                {{course[0].interest.abbrv}} {{course[0].number}}

          |  with
          select(onchange="updateInterestCourses(this)")
            option(selected, value="0")
              | none
            -for interest in interests
              option(value="{{interest.id}}")
                {{interest.abbrv}}
          select.replacement
            option
              | &nbsp;
      .line
      #addCodes
        .line.title
          | Outstanding Registration Passes
        -for pass in passes
          .line.registrationPass
            {{pass.profile}}

  #profileToolbar
    span#submitForm 
      | submit
